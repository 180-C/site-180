{
  "name": "hugoplate",
  "version": "1.7.6",
  "author": "zeon.studio",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.21",
    "markdownlint-cli2": "^0.18.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-go-template": "0.0.15",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-config-recommended-scss": "^16.0.2",
    "tailwind-bootstrap-grid": "^5.1.0",
    "tailwindcss": "^3.4.18"
  },
  "description": "hugo tailwindcss boilerplate",
  "license": "MIT",
  "scripts": {
    "dev": "hugo server",
    "build": "hugo --gc --minify --templateMetrics --templateMetricsHints --forceSyncStatic",
    "test": "hugo server --disableFastRender --navigateToChanged --templateMetrics --templateMetricsHints --watch --forceSyncStatic -e production --minify",
    "update-modules": "node ./scripts/clearModules.js && hugo mod clean --all && hugo mod get -u ./... && hugo mod tidy",
    "format": "prettier -w .",
    "content-lint": "markdownlint-cli2 '**/*.md' '#node_modules'",
    "style-lint": "stylelint \"**/*.{css,scss,sass}\""
  }
}
